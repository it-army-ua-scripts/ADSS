#!/usr/bin/env bash

if [ $? -ne 0 ] ; then
        echo "Неправильний вхідний параметр!"; 1>&2
        exit 1;
fi

export SCRIPT_DIR="$(
  cd "$(
    dirname "$(
      (readlink "${BASH_SOURCE[0]}" || echo "${BASH_SOURCE[0]}") \
        | sed -e "s#^../#$(dirname "$(dirname "${BASH_SOURCE[0]}")")/#"
    )"
  )/.." >/dev/null \
  && pwd
)"
export GREEN='\033[0;32m'
export GRAY='\033[0;37m'
export RED='\033[0;31m'
export NC='\033[0m'

source_files_in_directory() {
    local directory="$1"

    if [[ -d "$directory" ]]; then
        local files=("$directory"/*)

        for file in "${files[@]}"; do
            if [[ -f "$file" ]]; then
                source "$file"
            fi
        done
    else
        echo -e "${RED}Папку '$directory' не знайдено.${NC}"
    fi
}
source_files_in_directory "$SCRIPT_DIR/utils"
source_files_in_directory "$SCRIPT_DIR/menu"

validate_os
check_updates

if [ "$1" = "--auto-install" ] ; then
   install_fail2ban
   install_ufw
   install_db1000n
   install_distress
   install_mhddos
   mhddos_run
   mhddos_auto_enable
   extend_ports
   main_menu
elif [ "$1" = "--restore" ] ; then
  sudo rm -rf /opt/itarmy
  source <(curl -s https://raw.githubusercontent.com/it-army-ua-scripts/ADSS/install/install.sh)
else
    main_menu
fi